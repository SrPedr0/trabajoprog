package parctica_prog;

/**
 *
 * @author pedro
 */
public class Paraula {
    // ATRIBUTS
    char paraula[];
    int ind;
    int capacitat = 25;
    int TRAM = 10;
    // CONSTRUCTORS
    public Paraula() {
        paraula = new char[capacitat];
        ind = 0;
    }

    public Paraula(String s) {
        capacitat = s.length();
        ind = 0;
        paraula = new char[capacitat];
        for (int i = 0; i < s.length(); i++) {
            paraula[ind++] = s.charAt(i);
        }
    }
    //METODES
    //Afeigir un caracter a una paraula = char array + indicador)
    public void afeigir(char c){
       if (ind == capacitat){
           char aux[] = new char[capacitat + TRAM];
           for (int i=0;i<ind;i++){
           aux[i] = paraula[i];
           }
           capacitat = capacitat + TRAM;
           paraula = aux;    
       }else{
           paraula[ind++] = c;
       } 
    }
    public boolean iguals(Paraula a){
        boolean res = false;
        if(ind == a.ind){
            res = true;
        }
        if (res){
            for(int i=0;i<ind;i++){
                if(paraula[i]!= a.paraula[i]){
                    res = false;
                    i=ind;
                }
            }
        }
        return res;
    }
    //Paraula amb zero lletres buida
    public boolean buida(){
        return ind == 0;
    }
    @Override
    public String toString(){
        String res = "";
        for (int i=0;i<ind;i++){
            res+= paraula[i];
        }
        return res;
    }
    
    
}


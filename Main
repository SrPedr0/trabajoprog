            case 20:
                System.out.println("La lletra mes repetida es la t i surt " + abc[20]);
                break;
            case 21:
                System.out.println("La lletra mes repetida es la u i surt " + abc[21]);
                break;
            case 22:
                System.out.println("La lletra mes repetida es la v i surt " + abc[22]);
                break;
            case 23:
                System.out.println("La lletra mes repetida es la w i surt " + abc[23]);
                break;
            case 24:
                System.out.println("La lletra mes repetida es la x i surt " + abc[24]);
                break;
            case 25:
                System.out.println("La lletra mes repetida es la y i surt " + abc[25]);
                break;
            case 26:
                System.out.println("La lletra mes repetida es la z i surt " + abc[26]);
                break;
               
        }
    }
    
    

    public static void main(String[] args) throws IOException {
        (new Parctica_prog()).Inicio();
    }


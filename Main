package parctica_prog;

import java.io.FileNotFoundException;
import java.io.IOException;

/**
 *
 * @author pedro
 */
public class Parctica_prog {

    
    String nomf;
    LT tec = new LT();

    public void Inicio() throws FileNotFoundException, IOException {
        
        Presentacio();
        nomf = tec.llegirLinia();
        Switch(MenuPrincipal());
       

    }

    public void Presentacio() {
        System.out.println("***********************************************************************************");
        System.out.println("*                           PROGRAMA D'ANÀLISIS D'ARXIUS                          *");
        System.out.println("***********************************************************************************");
        System.out.print("* Introdueix el nom de l'arxiu: ");
        
    }

    public Character MenuPrincipal() throws IOException {
        FitxerIN carTOTALS, palTOTALS;
        carTOTALS = new FitxerIN(new Paraula(nomf));
        palTOTALS = new FitxerIN(new Paraula(nomf));
        System.out.println("\n\n\n\n\n\n\n\n\n\n\n\n");
        System.out.println("***********************************************************************************");
        System.out.println("*                           MENÚ PRINCIPAL DEL PROGRAMA                           *");
        System.out.println("***********************************************************************************");
        System.out.println("* Nom fitxer: " + nomf + "                          Caracters totals: " + carTOTALS.CaractersT());
        System.out.println("*                                                       Paraules totals: " + palTOTALS.ParaulesT());
        System.out.println("*                                                    Líneas totals: " + carTOTALS.getLin());
        System.out.println("Quina opció elegiu?");
        System.out.println("1 Lletra més repetida i nombre d'aparicions");
        System.out.println("2 Nombre d'aparicions de cada caràcter");
        System.out.println("3 Paraula més repetida i nombre d'aparicions");
        System.out.println("4 Cercar paraula");
        System.out.println("5 Cercar text");
        System.out.println("6 Paraules repetides");
        System.out.println("7 Codificar");
        System.out.println("8 Establir llavor");
        System.out.println("9 Establir tope de paraules");
        System.out.println("s Sortir");
        System.out.print("Introdueix la teva opció: ");
        Character c = AnalisisOpcio();
        return c;
    }

    public char AnalisisOpcio() {
        
        Character c = tec.llegirCaracter();
        while ((c < 1 || c > 9) && c != 's') {
            System.out.print("Pareix que hi ha un error introduiex una opcio:  ");
            c = tec.llegirCaracter();
        }
        return c;
    }
    public void Switch(Character op) throws IOException{
        switch(op){
            case '1':
                LletraMesRepetida();
                break;
            case '2':
                break;
            case '3':
                break;
            case '4':
                break;
            case '5':
                break;
            case '6':
                break;
            case '7':
                break;
            case '8':
                break;
            case '9':
                break;
            case 's':
                break;
                
        }
    }
    public void LletraMesRepetida() throws FileNotFoundException, IOException{
        FitxerIN mesrp = new FitxerIN(new Paraula(nomf));
        int abc[] = mesrp.LletresRep();
        int valor = mesrp.MesRepetidaLl(mesrp.LletresRep());
        switch(valor){
            case 0:
                System.out.println("La lletra mes repetida es la a i surt "+ abc[0]);
                break;
            case 1:
            System.out.println("La lletra mes repetida es la b i surt " + abc[1]);
                break;
            case 2:
                System.out.println("La lletra mes repetida es la c i surt " + abc[2]);
                break;
            case 3:

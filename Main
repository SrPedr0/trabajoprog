            case 5:
                System.out.println("La lletra mes repetida es la f i surt " + abc[5]);
                break;
            case 6:
                System.out.println("La lletra mes repetida es la g i surt " + abc[6]);
                break;
            case 7:
                System.out.println("La lletra mes repetida es la h i surt " + abc[7]);
                break;
            case 8:
                System.out.println("La lletra mes repetida es la i i surt " + abc[8]);
                break;
            case 9:
                System.out.println("La lletra mes repetida es la j i surt " + abc[9]);
                break;
            case 10:
                System.out.println("La lletra mes repetida es la k i surt " + abc[10]);
                break;
            case 11:
                System.out.println("La lletra mes repetida es la l i surt " + abc[11]);
                break;
            case 12:
                System.out.println("La lletra mes repetida es la m i surt " + abc[12]);
                break;
            case 13:
                System.out.println("La lletra mes repetida es la n i surt " + abc[13]);
                break;
            case 14:
                System.out.println("La lletra mes repetida es la ñ i surt " + abc[14]);
                break;
            case 15:
                System.out.println("La lletra mes repetida es la o i surt " + abc[15]);
